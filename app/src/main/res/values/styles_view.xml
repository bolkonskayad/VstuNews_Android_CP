<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:background">@color/colorAccent</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarDark">
        <item name="android:background">@color/colorAccent</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@color/bottom_nav_btn_selector</item>
    </style>


    <style name="AppSearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryHint">@string/NewFeed_search_hint</item>
        <item name="android:imeActionId">6</item>
    </style>

    <style name="TitleLargeTv" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_title_size</item>
    </style>

    <style name="TextSmallTv" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextStandardTv" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="TitleTv" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorError</item>
    </style>

</resources>